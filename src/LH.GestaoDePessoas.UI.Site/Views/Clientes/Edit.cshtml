@model LH.GestaoDePessoas.Application.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Cliente</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
