            <p>
                <a href="@Url.Action("index")" class="button btn btn-danger" style="width: 15%; margin-right: 5px">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-success" style="width: 15%"/>
            </p>
        </div>       

    </div>
